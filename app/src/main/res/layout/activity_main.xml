<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#EDEAEA">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal|top|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/NumbersCard"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#FAF7F7"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">

            <EditText
                android:id="@+id/calcResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:gravity="center_vertical"
                android:inputType="none"
                android:textSize="22sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/KeyboardCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="10dp"
            app:cardBackgroundColor="#FAF7F7"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_horizontal|top|center_vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/numpad1"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/String1"
                        android:textColor="#000000"
                        app:elevation="15dp" />

                    <Button
                        android:id="@+id/numpad2"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/String2"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/numpad3"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/String3"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/numpadEqual"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/StringEqual"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/numpad4"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/String4"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/numpad5"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/String4"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/numpad6"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/String6"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/numpadAddOrSin"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/StringAdd"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/numpad7"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/String7"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/numpad8"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/String8"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/numpad9"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/String9"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/numpadSubtractOrCos"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/StringSubtract"
                        android:textColor="#000000"
                        app:elevation="14dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="186dp"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/numpadClear"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/StringClear"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/numpad0"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/String0"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/numpadDivideOrLog"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/StringDivide"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/numpadMultiplyOrSqrt"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/StringMultiply"
                        android:textColor="#000000"
                        app:elevation="14dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/LeftCloseBracket"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/StringLeftCloseBracket"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/RightCloseBracket"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/StringRightCloseBracket"
                        android:textColor="#000000"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/dot"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/StringDot"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        app:elevation="14dp" />

                    <Button
                        android:id="@+id/delete"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:text="@string/StringDelete"
                        android:textColor="#000000"
                        android:textSize="10sp"
                        app:elevation="14dp" />

                </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/moreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/button_design"
                android:text="@string/StringMore"
                android:textColor="#000000" />

            <Button
                android:id="@+id/histButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/button_design"
                android:text="@string/StringHistory"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>